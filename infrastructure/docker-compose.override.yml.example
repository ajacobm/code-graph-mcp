# docker-compose.override.yml
# Local development overrides
# Copy to docker-compose.override.yml and adjust paths
# Docker Compose automatically loads this file if it exists

services:
  # Override workspace mount for local development
  codenav-mcp:
    volumes:
      - /path/to/your/repo:/app/workspace:ro

  codenav-web:
    volumes:
      - /path/to/your/repo:/app/workspace:ro

  # Optional: Use local Redis data directory
  # redis:
  #   volumes:
  #     - ~/.codenav/redis-data:/data

  # Optional: Use local Memgraph data directory
  # memgraph:
  #   volumes:
  #     - ~/.codenav/memgraph-data:/var/lib/memgraph

# Examples for different environments:
#
# Linux/Mac:
#   volumes:
#     - ~/code/myproject:/app/workspace:ro
#
# Windows (WSL2):
#   volumes:
#     - /mnt/c/Users/YourName/code/myproject:/app/workspace:ro
#
# GitHub Codespaces:
#   No override needed - uses /workspace by default with codespaces.yml profile
