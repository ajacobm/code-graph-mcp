# Docker Compose Environment Variables
# Copy to .env and adjust for your environment

# Volume mount paths (for local development with bind mounts)
# Leave empty to use Docker volumes (Codespaces default)
# Examples for local development:
#   REPO_MOUNT_PATH=/home/user/code/code-graph-mcp
#   REDIS_DATA_PATH=/tmp/redis-data
#   MEMGRAPH_DATA_PATH=/tmp/memgraph-data

REPO_MOUNT_PATH=
REDIS_DATA_PATH=
MEMGRAPH_DATA_PATH=

# Service ports (override for port conflicts)
REDIS_PORT=6379
MEMGRAPH_PORT=7687
API_SSE_PORT=10101
API_HTTP_PORT=10102
REDIS_INSIGHT_PORT=8001

# Redis configuration
REDIS_PERSISTENCE=yes
REDIS_MAXMEMORY=512mb

# Memgraph configuration
MEMGRAPH_SAVE_ON_EXIT=true
MEMGRAPH_MEMORY_LIMIT=1g

# API configuration
API_LOG_LEVEL=DEBUG
API_FILE_WATCHER=true
API_RELOAD=true

# Frontend (if using docker-compose-multi)
FRONTEND_PORT=5173
