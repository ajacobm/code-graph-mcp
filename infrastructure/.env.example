# CodeNav Docker Compose Environment Variables
# Copy to .env and adjust for your environment

# =============================================================================
# Workspace Configuration
# =============================================================================

# Path to the repository/workspace to analyze
# Mounted read-only into containers at /app/workspace
# Default: parent directory (..)
CODENAV_WORKSPACE=/path/to/your/repo

# =============================================================================
# Service Configuration
# =============================================================================

# Log level for backend services (DEBUG, INFO, WARNING, ERROR)
CODENAV_LOG_LEVEL=INFO

# Enable file watcher for live updates
CODENAV_FILE_WATCHER=false

# CORS origins for frontend development
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# =============================================================================
# Port Configuration (override for conflicts)
# =============================================================================

# Uncomment and modify if you have port conflicts
# REDIS_PORT=6379
# SSE_PORT=8000
# HTTP_PORT=10101
# FRONTEND_PORT=5173
# MEMGRAPH_BOLT_PORT=7687
# MEMGRAPH_LAB_PORT=3000
# JUPYTER_PORT=8888
# REDIS_INSIGHT_PORT=5540
